<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/fl_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2"
        android:orientation="horizontal">
        <RelativeLayout

            android:id="@+id/rl_main"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            tools:ignore="Suspicious0dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="首页"
                android:textSize="15sp"
                android:layout_marginBottom="3dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="#666666"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/iv_main"
                android:layout_marginTop="3dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_above="@+id/tv_main"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sy_icon"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_sq"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_sq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="社区"
                android:textSize="15sp"
                android:layout_marginBottom="3dp"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="#666666"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/iv_sq"
                android:layout_marginTop="3dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_above="@+id/tv_sq"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/sq_icon"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_xx"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            tools:ignore="Suspicious0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_xx"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="消息"
                android:textSize="15sp"
                android:layout_marginBottom="3dp"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#666666"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/iv_xx"
                android:layout_marginTop="3dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/tv_xx"
                android:src="@drawable/xx_icon"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_my"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            tools:ignore="Suspicious0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_my"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="我的"
                android:textSize="15sp"
                android:layout_marginBottom="3dp"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#666666"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/iv_my"
                android:layout_marginTop="3dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/tv_my"
                android:src="@drawable/my_icon"
                />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>